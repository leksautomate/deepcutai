# DeepCut AI - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Server Configuration
# ===========================================
NODE_ENV=production
PORT=5000

# Database Connection (PostgreSQL)
DATABASE_URL=postgresql://deepcut:your_password@localhost:5432/deepcutai

# Session Security (generate with: openssl rand -hex 32)
SESSION_SECRET=generate_a_random_64_character_string_here

# Set to true if using HTTPS (recommended for production)
COOKIE_SECURE=false

# ===========================================
# AI SERVICES - Configure via Settings page or here
# ===========================================

# Script Generation
GEMINI_API_KEY=
GROQ_API_KEY=

# TTS Providers (choose one or both)
SPEECHIFY_API_KEY=
INWORLD_API_KEY=

# Image Generation (choose one or more)
FREEPIK_API_KEY=
WAVESPEED_API_KEY=
RUNPOD_API_KEY=
POLLINATIONS_API_KEY=

# Note: All API keys can be configured via the Settings page after login.
# ADMIN credentials are created on first visit through the web setup page.
